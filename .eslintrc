{
  "parser": "babel-eslint",
  "extends": [
    "standard",
    "standard-react"
  ],
  "plugins": [
    "babel",
    "react",
    "promise"
  ],
  "env": {
    "es6"    : true,
    "node"   : true,
    "browser": true,
    "jest"   : true
  },
  "globals": {
    "__DEV__"      : false,
    "__TEST__"     : false,
    "__PROD__"     : false,
    "__COVERAGE__" : false
  },
  "rules": {
    "semi"                 : [2, "always"],
    "jsx-quotes"           : [2, "prefer-single"],
    "max-len"              : [2, 120, 2],
    "object-curly-spacing" : [2, "always"],
    "key-spacing"          : [2, {
      "align": "colon"
    }],
    "no-unused-vars"       : [2, {
      "argsIgnorePattern": "^_"
    }]
  }
}
